{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "include": ["./**/*.d.ts", "./**/*.{js,jsx,ts,tsx}", "src/**/*"]
}